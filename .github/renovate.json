{
    "platform": "github",
    "assignees": ["acbgbca"],
    "prHourlyLimit": 0,
    "ignoreTests": true,
    "schedule": ["every weekday", "on Sunday"],
    "packageRules": [
        {
            "description": "Match specific Linux Server io versions",
            "matchPackageNames": [
                "ghcr.io/linuxserver/calibre-web",
                "ghcr.io/linuxserver/heimdall",
                "ghcr.io/linuxserver/transmission"],
            "allowedVersions": "< 2000.0"
        },
        {
            "description": "Automatically merge minor and patch-level updates",
            "matchUpdateTypes": ["minor", "patch", "digest"],
            "automerge": false
        },
        {
            "description": "Create PR for major versions",
            "matchUpdateTypes": ["major"],
            "automerge": false,
            "excludePackageNames": ["postgres, redis"]
        }
    ]
}