{
    "platform": "github",
    "prHourlyLimit": 0,
    "ignoreTests": true,
    "schedule": ["every weekday", "on Sunday"],
    "packageRules": [
        {
            "description": "Ignore previous yyyy.MM.dd versions",
            "matchPackageNames": ["transmission", "calibre-web", "heimdall"],
            "allowedVersions": "< 2000.0"
        },
        {
            "description": "Automatically merge minor and patch-level updates",
            "matchUpdateTypes": ["minor", "patch", "digest"],
            "automerge": false,
            "assigneesFromCodeOwners": true
        },
        {
            "description": "Create PR for major versions",
            "matchUpdateTypes": ["major"],
            "automerge": false,
            "assigneesFromCodeOwners": true,
            "excludePackageNames": ["postgres"]
        }
    ]
}