{
    "platform": "github",
    "assignees": ["acbgbca"],
    "prHourlyLimit": 0,
    "ignoreTests": true,
    "schedule": ["every weekday", "on Sunday"],
    "packageRules": [
        {
            "description": "Match specific Linux Server io versions",
            "matchPackageNames": ["calibre-web", "heimdall"],
            "allowedVersions": "/^version-[0-9]{1,3}\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
        },
        {
            "description": "Match specific Linux Server io versions",
            "matchPackageNames": ["transmission"],
            "allowedVersions": "/^[0-9]{1,3}\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
        },
        {
            "description": "Automatically merge minor and patch-level updates",
            "matchUpdateTypes": ["minor", "patch", "digest"],
            "automerge": false
        },
        {
            "description": "Create PR for major versions",
            "matchUpdateTypes": ["major"],
            "automerge": false,
            "excludePackageNames": ["postgres"]
        }
    ]
}