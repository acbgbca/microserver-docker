{
    "platform": "github",
    "assignees": ["acbgbca"],
    "prHourlyLimit": 0,
    "ignoreTests": true,
    "schedule": ["on Friday"],
    "packageRules": [
        {
            "description": "Ignore old yyyy-MM-dd versions",
            "matchPackageNames": [
                "ghcr.io/linuxserver/heimdall",
                "ghcr.io/linuxserver/transmission"],
            "allowedVersions": "< 2000.0"
        },
        {
            "description": "Ignore old calibre-web versions",
            "matchPackageNames": [
                "ghcr.io/linuxserver/calibre-web"],
            "allowedVersions": "< 5.0"
        },
        {
            "description": "Automatically digest updates",
            "matchUpdateTypes": ["digest"],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "description": "Automatically merge minor and patch-level updates",
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": false
        },
        {
            "description": "Create PR for major versions",
            "matchUpdateTypes": ["major"],
            "automerge": false,
            "excludePackageNames": ["postgres", "redis"]
        }
    ]
}